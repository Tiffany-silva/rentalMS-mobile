<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lanka.rentalmangment"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/rentalmslogo"
        android:label="@string/app_name"
        android:theme="@style/Theme.RentalManagement"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        tools:replace="android:theme,android:icon">

        <activity android:name=".Activities.LessorMainActivity" android:theme="@style/mytheme"></activity>
        <activity android:name=".Activities.AdminMainActivity" android:theme="@style/mytheme"></activity>
        <activity android:name=".Activities.CategoryProductActivity" android:theme="@style/mytheme"></activity>
        <activity android:name=".Activities.OrderDetailActivity" android:theme="@style/AppThemenobar"></activity>
        <activity android:name=".Activities.Login"  android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.ProductDetailActivity" android:theme="@style/AppTheme"></activity>
        <activity android:name=".Activities.signup" android:theme="@style/AppThemenobar"></activity>
        <activity android:name=".Activities.MainActivity" android:theme="@style/mytheme"></activity>
        <activity android:name=".Activities.UserSelectActivity" android:theme="@style/mytheme"></activity>

        <!--        <activity android:name=".MainActivity2" />-->
        <activity android:name=".Activities.SplashActivity" android:theme="@style/mytheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>