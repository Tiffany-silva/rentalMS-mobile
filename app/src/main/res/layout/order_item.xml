<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:id="@+id/order_toolbar_id"-->
<!--        android:layout_width="388dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:minHeight="?android:actionBarSize"-->
<!--        android:theme="@style/ThemeOverlay.AppCompat.Light"-->
<!--        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <androidx.cardview.widget.CardView
        android:id="@+id/order_cardview_id"
        android:layout_width="wrap_content"
        android:layout_height="159dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name_order"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:paddingLeft="10dp"
                    android:text="Item Name"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_relative_state_id"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_date_textview_id"
                    android:layout_width="94dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Rental date"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/return_date_textview_id"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Return date"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_status_textview_id"
                    android:layout_width="134dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Order Status"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_datess"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rental_date_order_item"
                    android:layout_width="94dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Order date"
                    android:textAlignment="center"
                    android:textColor="#292727"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/return_date_order_item"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Order date"
                    android:textAlignment="center"
                    android:textColor="#292727"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/order_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_cardview_id"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_total_view_id"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>