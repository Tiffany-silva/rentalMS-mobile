<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_coordinate_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.lanka.rentalmangment.Fragments.AddCategoryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<!--        <com.google.android.material.appbar.AppBarLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fitsSystemWindows="true">-->

<!--        </com.google.android.material.appbar.AppBarLayout>-->

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="60dp" />-->

        <LinearLayout
            android:id="@+id/layout_cat"
            android:layout_width="381dp"
            android:layout_height="102dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/category_name_add"
                android:layout_width="160dp"
                android:layout_height="85dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Category Name"
                android:inputType="textCapWords"
                android:paddingTop="10dp" />

            <com.lanka.rentalmangment.utils.CustomButton
                android:id="@+id/add_category_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:background="@drawable/register_button_style_selector"
                android:backgroundTint="@color/colorSecondary"
                android:clickable="true"
                android:cursorVisible="false"
                android:elevation="3dp"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="Add Category"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <include
            android:id="@+id/commonListCategory"
            layout="@layout/commonlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>