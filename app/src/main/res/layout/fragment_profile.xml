<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context="com.lanka.rentalmangment.Fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="match_parent"
            android:layout_height="283dp"
            android:layout_marginTop="80dp" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/role_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <com.lanka.rentalmangment.utils.CustomButton
            android:id="@+id/logout_profile"
            android:layout_width="283dp"
            android:layout_height="41dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_selector2"
            android:gravity="center"
            android:text="logout"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>