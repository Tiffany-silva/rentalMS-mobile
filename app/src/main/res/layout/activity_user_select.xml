<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/activity_foster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="226dp"

                android:layout_marginHorizontal="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="50dp"
                android:contentDescription=""
                android:src="@drawable/handshake" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R E N T A L  M S"
                android:textAlignment="center"
                android:textColor="#888787"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:paddingTop="130dp"
                android:text="Select user type to continue with registration"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#777676"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="bottom">


                <LinearLayout
                    android:id="@+id/LLsign"
                    android:layout_width="563dp"
                    android:layout_height="102dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lessor"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight=".5"
                        android:background="@color/colorPrimary"
                        android:gravity="center">

                        <com.lanka.rentalmangment.utils.CustomTextView
                            android:id="@+id/btnLetsStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="LESSOR"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lessi"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_weight=".5"
                        android:background="@color/colorPrimary"
                        android:gravity="center">

                        <com.lanka.rentalmangment.utils.CustomTextView
                            android:id="@+id/btnSkip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="LESSEE"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16dp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>